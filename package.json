{
  "name": "@subspace/root",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "format": "biome check --write .",
    "lint:eslint": "eslint .",
    "lint:biome": "biome check .",
    "lint": "pnpm lint:eslint && pnpm lint:biome",
    "typecheck": "tsc -b -v",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:up": "pnpm -r --if-present run test:up",
    "test:down": "pnpm -r --if-present run test:down",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "pnpm -r run build",
    "clean": "pnpm -r run clean"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^22.19.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-unicorn": "^62.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16",
    "vitest-mock-extended": "^3.1.0"
  }
}
